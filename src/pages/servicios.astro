---
import Layout from "../layouts/Layout.astro";
import ServicesList from "../components/ServicesList";
import AnalyticalTable from "../components/AnalyticalTable";
import AnalysisDefinitions from "../components/AnalysisDefinitions";
import BankAccounts from "../components/BankAccounts";
---

<Layout title="Servicios | Labminares">
    <!-- Hero Header -->
    <div class="relative bg-brand-surface py-12 sm:py-24">
        <div class="absolute inset-0 overflow-hidden">
            <div class="absolute inset-0 bg-brand-surface opacity-90"></div>
        </div>
        <div
            class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center"
        >
            <h1
                class="text-3xl font-extrabold tracking-tight text-white sm:text-5xl lg:text-6xl"
            >
                Nuestros Servicios
            </h1>
            <p
                class="mt-4 sm:mt-6 max-w-2xl mx-auto text-lg sm:text-xl text-gray-300"
            >
                Tecnología de punta y experiencia técnica para brindar
                resultados precisos y confiables.
            </p>
        </div>
    </div>

    <!-- Main Content -->
    <main class="bg-white">
        {/* White Section: Services Detail */}
        <section class="relative bg-white overflow-hidden py-12 sm:py-24">
            <ServicesList client:load />
        </section>

        {/* Gray Section: Technical Table & Definitions */}
        <section
            class="relative bg-gray-50 border-t border-gray-100 font-sans overflow-hidden py-12 sm:py-24"
        >
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
                <div class="text-center mb-10 sm:mb-16">
                    <h2
                        class="text-2xl sm:text-3xl font-extrabold text-gray-900 sm:text-4xl uppercase tracking-tight"
                    >
                        Capacidades Técnicas y <span class="text-brand-primary"
                            >Garantía Analítica</span
                        >
                    </h2>
                    <p
                        class="mt-4 max-w-2xl text-base sm:text-lg text-gray-600 mx-auto"
                    >
                        Detalle de elementos analizados, métodos utilizados y
                        definiciones operativas de nuestros servicios.
                    </p>
                </div>

                <div
                    class="grid grid-cols-1 xl:grid-cols-2 gap-8 sm:gap-16 items-start"
                >
                    {/* Left Side: Table */}
                    <div class="xl:sticky xl:top-28 order-2 xl:order-1">
                        <AnalyticalTable client:load />
                    </div>

                    {/* Right Side: Definitions */}
                    <div class="space-y-4 order-1 xl:order-2">
                        <AnalysisDefinitions client:load />
                    </div>
                </div>

                {/* Full Width Bottom Sections */}
                <div class="mt-20 space-y-20">
                    <BankAccounts client:load />
                </div>
            </div>
        </section>
    </main>
</Layout>

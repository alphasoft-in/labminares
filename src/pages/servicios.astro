---
import Layout from "../layouts/Layout.astro";
import ServicesList from "../components/ServicesList";
import AnalyticalTable from "../components/AnalyticalTable";
import AnalysisDefinitions from "../components/AnalysisDefinitions";
import BankAccounts from "../components/BankAccounts";
---

<Layout title="Servicios | Labminares">
    <!-- Hero Header -->
    <div class="relative bg-brand-surface py-20 overflow-hidden">
        {/* Background Image with Overlay */}
        <div class="absolute inset-0 z-0">
            <img
                src="/images/area_instrumental.png"
                alt="Nuestros Servicios"
                class="w-full h-full object-cover opacity-50 mix-blend-luminosity transform scale-105"
            />
            <div
                class="absolute inset-0 bg-gradient-to-r from-brand-surface via-brand-surface/80 to-transparent"
            >
            </div>
            <div class="absolute inset-0 bg-brand-surface/40"></div>
        </div>

        <div
            class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center z-10"
        >
            <div
                class="inline-flex items-center space-x-2 px-3 py-1 rounded-full bg-white/10 border border-white/20 mb-6 backdrop-blur-sm"
            >
                <div
                    class="w-1.5 h-1.5 rounded-full bg-brand-primary animate-pulse"
                >
                </div>
                <span
                    class="text-white font-bold uppercase tracking-[0.2em] text-[10px]"
                    >Servicios Especializados</span
                >
            </div>
            <h1
                class="text-3xl font-extrabold tracking-tight text-white sm:text-4xl lg:text-5xl uppercase"
            >
                Nuestros Servicios
            </h1>
            <p
                class="mt-4 max-w-2xl mx-auto text-lg text-gray-300 font-medium leading-relaxed"
            >
                Tecnología de punta y experiencia técnica para resultados
                precisos.
            </p>
        </div>
    </div>

    <!-- Main Content -->
    <main class="bg-white">
        {/* White Section: Services Detail */}
        <section class="relative bg-white overflow-hidden py-12 sm:py-24">
            <ServicesList client:load />
        </section>

        {/* Gray Section: Technical Table & Definitions */}
        <section
            class="relative bg-gray-50 border-t border-gray-100 font-sans overflow-hidden py-12 sm:py-24"
        >
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
                <div class="text-center mb-10 sm:mb-16">
                    <h2
                        class="text-2xl sm:text-3xl font-extrabold text-gray-900 sm:text-4xl uppercase tracking-tight"
                    >
                        Capacidades Técnicas y <span class="text-brand-primary"
                            >Garantía Analítica</span
                        >
                    </h2>
                    <p
                        class="mt-4 max-w-2xl text-base sm:text-lg text-gray-600 mx-auto"
                    >
                        Detalle de elementos analizados, métodos utilizados y
                        definiciones operativas de nuestros servicios.
                    </p>
                </div>

                <div
                    class="grid grid-cols-1 xl:grid-cols-2 gap-8 sm:gap-16 items-start"
                >
                    {/* Left Side: Table */}
                    <div class="xl:sticky xl:top-28 order-2 xl:order-1">
                        <AnalyticalTable client:load />
                    </div>

                    {/* Right Side: Definitions */}
                    <div class="space-y-4 order-1 xl:order-2">
                        <AnalysisDefinitions client:load />
                    </div>
                </div>

                {/* Full Width Bottom Sections */}
                <div class="mt-20 space-y-20">
                    <BankAccounts client:load />
                </div>
            </div>
        </section>
    </main>
</Layout>

---
import Layout from "../layouts/Layout.astro";
import { FontAwesomeIcon } from "@fortawesome/react-fontawesome";
import {
    faYoutube,
    faFacebook,
    faLinkedin,
    faTiktok,
    faInstagram,
} from "@fortawesome/free-brands-svg-icons";
import {
    faExternalLinkAlt,
    faPlay,
    faCircle,
    faArrowRight,
    faVolumeUp,
} from "@fortawesome/free-solid-svg-icons";

const videos = [
    {
        id: "bwVGjoCFNk4",
        title: "Minares South en Shorts",
        description:
            "Descubre contenido rápido y dinámico sobre nuestros procesos y actualidad en formato breve.",
    },
    {
        id: "6u7yT4nNogY",
        title: "Presencia de Minares South",
        description:
            "Recorrido por nuestras sedes estratégicas y el impacto de nuestro trabajo en la minería nacional.",
    },
];

const socialLinks = [
    {
        name: "LinkedIn",
        icon: faLinkedin,
        url: "https://www.linkedin.com/company/minares-south-s-r-l/",
        color: "text-[#0A66C2]",
    },
    {
        name: "Facebook",
        icon: faFacebook,
        url: "https://www.facebook.com/people/Minares-South-SRL-Laboratorio-Qu%C3%ADmico-Metal%C3%BArgico/61572169857346/",
        color: "text-[#1877F2]",
    },
    {
        name: "Instagram",
        icon: faInstagram,
        url: "#",
        color: "text-[#E4405F]",
    },
    {
        name: "TikTok",
        icon: faTiktok,
        url: "https://www.tiktok.com/@minaressouth",
        color: "text-black",
    },
    {
        name: "YouTube",
        icon: faYoutube,
        url: "https://www.youtube.com/@MinaresSouth",
        color: "text-[#FF0000]",
    },
];
---

<Layout title="Novedades | Minares South">
    {/* Standardized Hero Section - Matched Height & Fonts */}
    <div class="relative bg-brand-surface py-20 overflow-hidden">
        <div class="absolute inset-0 z-0">
            <img
                src="/images/area_instrumental.png"
                alt="Novedades"
                class="w-full h-full object-cover opacity-40 mix-blend-multiply scale-105"
            />
            <div
                class="absolute inset-0 bg-gradient-to-b from-brand-surface/60 via-brand-surface/80 to-brand-surface"
            >
            </div>
        </div>

        <div
            class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center z-10"
        >
            <div
                class="inline-flex items-center space-x-2 px-3 py-1 rounded-full bg-black/40 border border-white/10 mb-6 backdrop-blur-md"
            >
                <div class="w-1.5 h-1.5 rounded-full bg-brand-primary"></div>
                <span
                    class="text-white font-bold uppercase tracking-[0.2em] text-[10px]"
                    >Portal de Comunicación Oficial</span
                >
            </div>
            <h1
                class="text-3xl font-extrabold tracking-tight text-white sm:text-4xl lg:text-5xl uppercase mb-4"
            >
                NOVEDADES <span class="text-brand-primary">&</span> EVENTOS
            </h1>
            <p
                class="max-w-2xl mx-auto text-lg text-gray-300 font-medium leading-relaxed"
            >
                Últimas noticias, contenido técnico y presencia digital de
                Minares South.
            </p>
        </div>
    </div>

    <main class="bg-white">
        {/* Section 1: Video Grid */}
        <section class="py-24 sm:py-32 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div
                class="flex items-center space-x-4 mb-20 border-b border-gray-100 pb-10"
            >
                <div
                    class="bg-brand-primary p-3 rounded-xl shadow-[0_10px_30px_rgba(254,0,2,0.3)]"
                >
                    <FontAwesomeIcon
                        icon={faYoutube}
                        className="text-white h-6 w-6"
                    />
                </div>
                <div>
                    <h2
                        class="text-2xl md:text-3xl font-black text-gray-900 uppercase tracking-tighter"
                    >
                        Videos Destacados
                    </h2>
                    <p class="text-gray-400 text-sm font-medium">
                        Contenido oficial en alta definición.
                    </p>
                </div>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20">
                {
                    videos.map((video) => (
                        <div class="group bg-gray-50/50 rounded-[2.5rem] sm:rounded-[3.5rem] p-6 sm:p-8 border border-gray-100 transition-all duration-500 hover:bg-white hover:shadow-[0_40px_80px_-20px_rgba(0,0,0,0.1)] hover:border-brand-primary/10">
                            <div class="aspect-video relative rounded-[1.5rem] sm:rounded-[2.5rem] overflow-hidden shadow-2xl bg-black mb-8 sm:mb-10 ring-1 ring-gray-200">
                                <iframe
                                    class="w-full h-full opacity-90 group-hover:opacity-100 transition-opacity"
                                    src={`https://www.youtube.com/embed/${video.id}?rel=0&modestbranding=1`}
                                    title={video.title}
                                    frameborder="0"
                                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                    allowfullscreen
                                />
                            </div>
                            <h3 class="text-xl sm:text-2xl font-bold text-gray-900 mb-4 group-hover:text-brand-primary transition-colors">
                                {video.title}
                            </h3>
                            <p class="text-gray-500 text-sm leading-relaxed mb-8 sm:mb-10">
                                {video.description}
                            </p>

                            <a
                                href={`https://www.youtube.com/watch?v=${video.id}`}
                                target="_blank"
                                class="group/btn relative overflow-hidden inline-flex items-center justify-center w-full bg-brand-primary text-white font-black py-4.5 px-8 rounded-2xl text-[11px] uppercase tracking-[0.2em] transition-all shadow-[0_15px_35px_rgba(254,0,2,0.2)] hover:-translate-y-1"
                            >
                                <span class="relative z-10 flex items-center">
                                    <FontAwesomeIcon
                                        icon={faPlay}
                                        className="mr-3 h-3 w-3"
                                    />
                                    Ver Video Completo
                                </span>
                                <div class="absolute inset-0 bg-white/20 translate-y-full group-hover/btn:translate-y-0 transition-transform duration-500" />
                            </a>
                        </div>
                    ))
                }
            </div>
        </section>

        {/* Section 2: Social Media - Premium Luxe Cards */}
        <section
            class="bg-gray-50/50 py-32 border-y border-gray-100 relative overflow-hidden"
        >
            {/* Soft Background Accent */}
            <div
                class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full bg-[radial-gradient(circle_at_center,rgba(254,0,2,0.02)_0%,transparent_70%)]"
            >
            </div>

            <div class="max-w-7xl mx-auto px-6 sm:px-12 lg:px-16 relative z-10">
                <div class="text-center mb-20">
                    <div
                        class="flex items-center justify-center space-x-4 mb-6"
                    >
                        <div class="w-10 h-px bg-gray-200"></div>
                        <span
                            class="text-brand-primary font-bold uppercase tracking-[0.3em] text-[10px]"
                            >Ecosistema Digital</span
                        >
                        <div class="w-10 h-px bg-gray-200"></div>
                    </div>
                    <h2
                        class="text-4xl md:text-5xl font-black text-gray-900 uppercase tracking-tighter mb-4"
                    >
                        SÍGUENOS <span class="text-brand-primary">EN REDES</span
                        >
                    </h2>
                    <p class="text-gray-500 font-medium max-w-lg mx-auto">
                        Únete a nuestra comunidad técnica exclusiva para recibir
                        actualizaciones y noticias del sector.
                    </p>
                </div>

                <div
                    class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-5 gap-6 md:gap-8 xl:gap-10 max-w-7xl mx-auto"
                >
                    {
                        socialLinks.map((social) => (
                            <a
                                href={social.url}
                                target="_blank"
                                class="group relative bg-gray-50/50 p-6 sm:p-8 lg:p-10 rounded-3xl sm:rounded-[3rem] border border-gray-100 shadow-sm transition-all duration-500 hover:-translate-y-2 hover:shadow-xl hover:bg-white hover:border-brand-primary/20 flex flex-col items-center text-center justify-center min-h-[160px] sm:min-h-[260px] lg:min-h-[300px] overflow-hidden"
                            >
                                <div class="relative z-10 mb-6 sm:mb-10 transition-all duration-500 group-hover:scale-110">
                                    <FontAwesomeIcon
                                        icon={social.icon}
                                        className={`${social.color} transition-all duration-500`}
                                        style={{
                                            width: "clamp(70px, 8vw, 100px)",
                                            height: "clamp(70px, 8vw, 100px)",
                                        }}
                                    />
                                </div>

                                <div class="relative z-10">
                                    <div class="flex items-center justify-center space-x-2 mb-2 sm:mb-3">
                                        <div class="w-1 h-1 sm:w-1.5 sm:h-1.5 rounded-full bg-brand-primary animate-pulse" />
                                        <span class="text-gray-400 font-bold uppercase tracking-[0.3em] text-[9px] sm:text-[10px]">
                                            Oficial
                                        </span>
                                    </div>
                                    <h3 class="text-lg sm:text-xl font-bold text-gray-900 uppercase tracking-tight group-hover:text-brand-primary transition-colors">
                                        {social.name}
                                    </h3>
                                </div>
                            </a>
                        ))
                    }
                </div>
            </div>
        </section>
    </main>
</Layout>

<style>
    /* Premium Shadows and Textures */
    .shadow-inner {
        box-shadow: inset 0 2px 10px rgba(0, 0, 0, 0.05);
    }
</style>

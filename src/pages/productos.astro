---
import Layout from "../layouts/Layout.astro";
import ProductCategories from "../components/ProductCategories";
---

<Layout title="Insumos y Equipos | LabMinares">
    <div class="bg-white min-h-screen">
        {/* Hero Header (Matched to Services/About pages) */}
        <div class="relative bg-brand-surface py-20 overflow-hidden">
            {/* Background Image with Overlay */}
            <div class="absolute inset-0 z-0">
                <img
                    src="/images/pruebas_metalurgicas.png"
                    alt="Insumos y Equipos"
                    class="w-full h-full object-cover opacity-50 mix-blend-luminosity transform scale-105"
                />
                <div
                    class="absolute inset-0 bg-gradient-to-r from-brand-surface via-brand-surface/80 to-transparent"
                >
                </div>
                <div class="absolute inset-0 bg-brand-surface/40"></div>
            </div>

            <div
                class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center z-10"
            >
                <div
                    class="inline-flex items-center space-x-2 px-3 py-1 rounded-full bg-white/10 border border-white/20 mb-6 backdrop-blur-sm"
                >
                    <div
                        class="w-1.5 h-1.5 rounded-full bg-brand-primary animate-pulse"
                    >
                    </div>
                    <span
                        class="text-white font-bold uppercase tracking-[0.2em] text-[10px]"
                        >Suministros de Calidad</span
                    >
                </div>
                <h1
                    class="text-3xl font-extrabold tracking-tight text-white sm:text-4xl lg:text-5xl uppercase mb-4"
                >
                    Insumos y Equipos
                </h1>
                <p class="max-w-2xl mx-auto text-lg text-gray-300 font-medium">
                    Suministros especializados para laboratorios metal√∫rgicos.
                </p>
            </div>
        </div>

        {/* Content Section */}
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
            <ProductCategories client:visible />
        </div>
    </div>
</Layout>
